<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="hTextBoxStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:text">@string/hello</item>
        <item name="android:textColor">#42B4E6</item>
        <item name="android:fontFamily">sans-serif"</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/body_text</item>
    </style>

    <style name="pTextBoxStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:text">@string/hello</item>
        <item name="android:textColor">#42B4E6</item>
        <item name="android:fontFamily">sans-serif"</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/body_text</item>
    </style>

    <style name="vTextBoxStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:text">@string/hello</item>
        <item name="android:textColor">#42B4E6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif"</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/drawer_text</item>
    </style>

    <style name="imageStyle">
        <item name="android:layout_width">@dimen/image</item>
        <item name="android:layout_height">@dimen/image</item>
        <item name="android:padding">@dimen/padding</item>
    </style>


    <style name="vLine">
        <item name="android:layout_width">@dimen/line</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="hLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="editt">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:width">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:ellipsize">start</item>
    </style>

</resources>